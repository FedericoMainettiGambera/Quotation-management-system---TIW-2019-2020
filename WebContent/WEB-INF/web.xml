<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<display-name>quotationMenagementTIW2019-2020</display-name>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/db_quotation_management</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>Brosinarms2</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>

	<servlet>
		<servlet-name>GoToLoginPage</servlet-name>
		<servlet-class>it.polimi.tiw.quotationsmenagment.controllers.GoToLoginPage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GoToLoginPage</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CheckLogin</servlet-name>
		<servlet-class>it.polimi.tiw.quotationsmenagment.controllers.CheckLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckLogin</servlet-name>
		<url-pattern>/CheckLogin/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>PriceQuotation</servlet-name>
		<servlet-class>it.polimi.tiw.quotationsmenagment.controllers.PriceQuotation</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PriceQuotation</servlet-name>
		<url-pattern>/PriceQuotation/*</url-pattern>
	</servlet-mapping>

